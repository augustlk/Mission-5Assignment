@{
    ViewData["Title"] = "Price Calculator";
}

<div class="calculator-box">
    
    <div class="container">
    <h1 class="mb-3">@ViewData["Title"]</h1>
    <p>Enter how many hours you need and I’ll calculate the total tutoring cost.</p>

   <!-- Input for number of hours needed -->
    <div class="mb-3">
        <label for="hours" class="form-label">Number of hours needed</label>
        <input id="hours" type="number" class="form-control" min="0" step="0.5" placeholder="e.g., 2" />
        <div id="hoursError" class="text-danger mt-1" style="display:none;"></div>
    </div>

        <!-- Box displaying rate-->
    <div class="mb-3">
        <label for="rate" class="form-label">Hourly rate</label>
        <input id="rate" type="text" class="form-control" value="25" readonly />
        <div class="form-text">Rate is fixed.</div>
    </div>

        <!-- Calculation button -->
    <button id="btnCalc" type="button" class="btn btn-primary">Calculate Total</button>

        <!-- Hourly rate calculation output -->
    <div class="mt-3">
        <label for="total" class="form-label">Total</label>
        <input id="total" type="text" class="form-control" readonly />
    </div>
</div>
</div>

@section Scripts {
    <script src="~/js/calculator.js" asp-append-version="true"></script>
}
